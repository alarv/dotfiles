#
# Docker
#
function dk {
    CONT=$@
    if [[ $CONT == lib_* ]]
    then
        docker kill $CONT
    elif [[ -z $CONT ]]
    then
	docker kill `dps | tail -n +2 | fzf`
    else
        CONT+=_1
        docker kill "lib_$CONT"
    fi
}

function dl {
    CONT=$@
    if [[ $CONT == lib_* ]]
    then
        docker logs $CONT
    elif [[ -z $CONT ]]
    then
	docker logs `dps | tail -n +2 | fzf`
    else
        CONT+=_1
        docker logs "lib_$CONT"
    fi
}

function dps {
    if [ -z "$@" ]
    then
	    docker ps | awk '{ print $NF }' 
    else
	    docker ps | awk '{ print $NF }' | grep --color=always -i $@
    fi
}

function de {
    CONT=$@
    if [[ $CONT == lib_* ]]
    then
        docker exec -ti $CONT bash
    elif [[ -z $CONT ]]
    then
	docker exec -ti `dps | tail -n +2 | fzf` bash
    else
        CONT+=_1
        docker exec -ti "lib_$CONT" bash
    fi
}

function db {
    NAME=`cat docker/NAME`
    if [ -z "$NAME" ]
    then
	    docker build .
    else
	    docker build -t $NAME .
    fi
}

# Restart a container
function dr {
    WD=`pwd`
    cd /home/eyeos/src/eyeos-single-node-fig/lib/ &> /dev/null
    docker-compose kill $@
    docker-compose rm --force $@
    docker-compose up -d $@
    cd $WD &> /dev/null
}

# Stop all containers
dstop-all() { docker stop $(docker ps -a -q); }
dkill-all() { docker kill $(docker ps -a -q); }

# Remove all containers
drm-all() { docker rm $(docker ps -a -q); }
